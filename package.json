{
  "name": "nestjs-saop",
  "version": "0.4.0",
  "description": "Spring style AOP in Nest.js",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "license": "MIT",
  "keywords": [
    "nestjs-aop",
    "nest-aop"
  ],
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "author": "miinhho",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write .",
    "prepare": "husky install",
    "test": "jest",
    "test:unit": "jest --testPathPatterns=.*\\.spec\\.ts$",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "test:coverage": "jest --coverage --coverageReporters=text --coverageReporters=lcov",
    "typedoc": "typedoc"
  },
  "peerDependencies": {
    "@nestjs/common": "^9 || ^10 || ^11",
    "@nestjs/core": "^9 || ^10 || ^11",
    "reflect-metadata": "^0.1.13 || ^0.2.0",
    "rxjs": "^7.5.6"
  },
  "devDependencies": {
    "@eslint/js": "^9.34.0",
    "@nestjs/common": "^11.1.6",
    "@nestjs/core": "^11.1.6",
    "@nestjs/platform-express": "^11.1.6",
    "@nestjs/testing": "^11.1.6",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.3.0",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/parser": "^8.41.0",
    "eslint": "^9.34.0",
    "globals": "^16.3.0",
    "husky": "^9.0.11",
    "jest": "^30.1.1",
    "lint-staged": "^15.2.5",
    "prettier": "^3.6.2",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.1",
    "typedoc": "^0.28.12",
    "typedoc-plugin-markdown": "^4.8.1",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.41.0"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "prettier --write",
      "eslint --fix"
    ]
  }
}
